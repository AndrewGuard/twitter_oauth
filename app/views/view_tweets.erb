<div class="container">

  <h3>Welcome, <%= current_user.username %>, to the Sweet Tweeting Thing</h3>

  <form action='/create_tweet' method='POST'>
    <input type="text" name="tweet">
    <input type="submit" value="Tweet Here!">
  </form>

</div>


<div class="container">

  <% current_user.tweets.each do |tweet| %>
    
    <ul>
    <li><br><%= tweet.text %> <br>
    created: <%= tweet.created_at %> <br></li>
  </ul>
    
  <% end %>

</div>
